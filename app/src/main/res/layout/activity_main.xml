<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@drawable/space"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edittext"
        android:textColorHint="#000000"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:hint="@string/zero"
        android:textColor="#000000"
        android:textSize="50sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/restart"
                android:layout_width="93dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/AC"
                android:textSize="50sp"
                tools:ignore="TextContrastCheck" />

            <ImageView
                android:id="@+id/delete"
                android:layout_width="107dp"
                android:layout_height="68dp"
                android:layout_weight="1"
                android:background="@drawable/delete"
                android:contentDescription="TODO"
                tools:ignore="ContentDescription,HardcodedText" />

            <TextView
                android:id="@+id/percent"
                android:layout_width="93dp"
                android:layout_height="68dp"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:text="%"
                android:textSize="50sp"
                tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry,TextContrastCheck" />

            <TextView
                android:id="@+id/divide"
                android:layout_width="99dp"
                android:layout_weight="1"
                android:background="@drawable/divide"
                android:layout_height="match_parent" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="0dp">
            <ImageView
                android:id="@+id/seven"
                android:layout_width="93dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:background="@drawable/seven"
                android:contentDescription="TODO"
                tools:ignore="ContentDescription,HardcodedText" />

            <ImageView
                android:id="@+id/eight"
                android:layout_width="107dp"
                android:layout_height="68dp"
                android:layout_weight="1"
                android:background="@drawable/eight"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/nine"
                android:layout_width="93dp"
                android:layout_height="68dp"
                android:layout_weight="1"
                android:background="@drawable/nine"
                tools:ignore="ContentDescription,HardcodedText,ImageContrastCheck"
                android:contentDescription="TODO" />

            <TextView
                android:id="@+id/plus"
                android:layout_width="99dp"
                android:layout_weight="1"
                android:text ="+"
                android:textSize="50sp"
                android:paddingStart="30sp"
                android:layout_height="match_parent"
                tools:ignore="HardcodedText,RtlSymmetry" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="0dp">

            <ImageView
                android:id="@+id/four"
                android:layout_width="93dp"
                android:layout_height="match_parent"
                android:background="@drawable/four"
                android:layout_weight="1"
                android:contentDescription="TODO"
                tools:ignore="ContentDescription,HardcodedText" />

            <ImageView
                android:id="@+id/five"
                android:layout_width="107dp"
                android:layout_height="68dp"
                android:layout_weight="1"
                android:background="@drawable/five"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/six"
                android:layout_width="93dp"
                android:layout_height="68dp"
                android:layout_weight="1"
                android:background="@drawable/six"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/minus"
                android:layout_width="99dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="40sp"
                android:text="-"
                android:textSize="60sp"
                tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry,TextContrastCheck" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="0dp">

            <ImageView
                android:id="@+id/one"
                android:layout_width="93dp"
                android:layout_height="match_parent"
                android:background="@drawable/one"
                android:layout_weight="1"
                android:contentDescription="TODO"
                tools:ignore="ContentDescription,HardcodedText" />

            <ImageView
                android:id="@+id/two"
                android:layout_width="107dp"
                android:layout_height="68dp"
                android:layout_weight="1"
                android:background="@drawable/two"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/three"
                android:layout_width="93dp"
                android:layout_height="68dp"
                android:layout_weight="1"
                android:background="@drawable/three"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/multiply"
                android:layout_width="99dp"
                android:layout_weight="1"
                android:text="X"
                android:textSize="50sp"
                android:paddingLeft="30sp"
                android:layout_height="match_parent"
                tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_height="0dp">

            <ImageView
                android:id="@+id/transfer"
                android:layout_width="93dp"
                android:layout_height="match_parent"
                android:background="@drawable/transfer"
                android:layout_weight="1"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/zero"
                android:layout_width="107dp"
                android:layout_height="68dp"
                android:layout_weight="1"
                android:background="@drawable/zero"
                android:contentDescription="TODO"
                tools:ignore="ContentDescription,HardcodedText,ImageContrastCheck" />

            <TextView
                android:id="@+id/dot"
                android:layout_width="93dp"
                android:layout_height="68dp"
                android:layout_weight="1"
                android:paddingLeft="40sp"
                android:text=","
                android:textSize="50sp"
                tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

            <ImageView
                android:id="@+id/equal"
                android:layout_width="99dp"
                android:layout_weight="1"
                android:background="@drawable/equal"
                android:layout_height="match_parent"
                tools:ignore="ContentDescription" />

        </TableRow>

    </TableLayout>

</LinearLayout>
